{
  "compilerOptions": {
    "outDir": "./bin/",
    "module": "esnext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "esnext",
  },
  "lib": ["DOM", "es6"],
  "include": [
    "src/**/*"
  ],
}